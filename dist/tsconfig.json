{
  "compileOnSave": false,
  "compilerOptions": {
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "importHelpers": true,
    "outDir": "./dist/out-tsc",
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "target": "es6",
    "skipLibCheck": true,
    "types": ["node"],
    "typeRoots": [
      "node_modules/@types"
    ],
    "lib": [
      "es2017",
      "dom",
      "dom.iterable"
    ],
    "module": "es2020",
    "baseUrl": "./src"
  },
  "angularCompilerOptions": {
    "allowSyntheticDefaultImports": true
  }
}
