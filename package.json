{
  "name": "angular-core",
  "version": "2.1.1",
  "description": "Angular Core",
  "license": "MIT",
  "authors": "Cubable Team",
  "private": true,
  "scripts": {
    "ng": "node --max-old-space-size=4096 ./node_modules/@angular/cli/bin/ng",
    "ng-packagr": "node --max-old-space-size=4096 ./node_modules/ng-packagr/cli/main.js",
    "lint": "ng lint",
    "version": "node -e \"console.log(require('./package.json').version);\"",
    "version:patch": "npm --no-git-tag-version version patch",
    "build": "npm i && ng-packagr -p ng-package.json --config ./src/lib/tsconfig.lib.json && node ./cli/copy-files.js",
    "release": "branch=$(git rev-parse --abbrev-ref HEAD); git subtree split --prefix dist release_$branch; git push origin -f release_$branch:release_$branch",
    "tag": "branch=$(git rev-parse --abbrev-ref HEAD) git tag -a $branch; git push origin --tags"
  },
  "peerDependencies": {
    "@angular/animations": "13.3.8",
    "@angular/cdk": "^13.3.7",
    "@angular/common": "13.3.8",
    "@angular/compiler": "13.3.8",
    "@angular/core": "13.3.8",
    "@angular/forms": "13.3.8",
    "@angular/platform-browser": "13.3.8",
    "@angular/platform-browser-dynamic": "13.3.8",
    "@angular/router": "13.3.8",
    "@angular/service-worker": "13.3.8",
    "@ngx-translate/core": "^14.0.0",
    "@ngx-translate/http-loader": "^7.0.0",
    "clone-deep": "^4.0.1",
    "core-js": "^2.4.1",
    "crypto-js": "3.1.9-1",
    "hammerjs": "^2.0.8",
    "intersection-observer": "^0.7.0",
    "lodash": "4.17.15",
    "moment": "^2.23.0",
    "moment-timezone": "^0.5.14",
    "ngx-cookie-service": "^13.2.1",
    "rxjs": "^6.5.5",
    "socket.io-client": "^4.0.1",
    "tslib": "^2.4.0",
    "zone.js": "~0.11.4"
  },
  "devDependencies": {
    "@angular-devkit/build-angular": "~13.3.5",
    "@angular-devkit/core": "^13.3.5",
    "@angular-devkit/schematics": "^13.3.5",
    "@angular-eslint/builder": "^13.2.1",
    "@angular-eslint/eslint-plugin": "^13.2.1",
    "@angular-eslint/eslint-plugin-template": "^13.2.1",
    "@angular-eslint/schematics": "13.2.1",
    "@angular-eslint/template-parser": "^13.2.1",
    "@angular/cli": "13.3.5",
    "@angular/compiler-cli": "^13.3.8",
    "@angular/language-service": "13.3.8",
    "@commitlint/cli": "^8.2.0",
    "@commitlint/config-conventional": "^8.2.0",
    "@typescript-eslint/eslint-plugin": "5.3.0",
    "@typescript-eslint/parser": "5.3.0",
    "codelyzer": "^6.0.0",
    "eslint": "^8.2.0",
    "eslint-plugin-deprecation": "^1.3.2",
    "eslint-plugin-import": "2.25.2",
    "eslint-plugin-jsdoc": "latest",
    "eslint-plugin-prefer-arrow": "latest",
    "husky": "^3.0.8",
    "ng-packagr": "^13.3.1",
    "pug": "^2.0.3",
    "scss-bundle": "^3.0.1",
    "ts-node": "~3.2.0",
    "typescript": "4.6.4"
  },
  "husky": {
    "hooks": {
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
    }
  }
}
